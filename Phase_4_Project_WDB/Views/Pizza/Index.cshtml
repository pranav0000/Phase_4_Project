<h2 id="pizza_list"> Pizza List</h2>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a asp-controller="customer" asp-action="login"><button class="btn btn-danger" type="button">Logout</button> </a>
</div>


@{ var list = ViewBag.pizza_list;}

@{ ViewData["Title"] = "Index"; }
<div class="card-deck">
    @foreach (var item in list)
    {
    <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
        <div class="card-header">
            <h3>@item.PizzaName</h3>
        </div>
         <img class="card-img-top" src="@item.PizzaImage" alt="Laptop Image" height="200px" /> 
        <div class="card-footer text-center">
            <a asp-action="pizza_details" asp-controller="Pizza" asp-route-id="@item.PizzaId" class="btn btn-primary">View Details</a>
            <a asp-action="order_cart" asp-route-id="@item.PizzaId" class="btn btn-primary">Add to Cart</a>
        </div>
    </div>}
</div>