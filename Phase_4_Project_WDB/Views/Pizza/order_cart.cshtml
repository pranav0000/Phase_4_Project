@model IEnumerable<Phase_4_Project_WDB.Models.Pizza_Records>

@{
    ViewData["Title"] = "Order_cart";
}

@{
    var list = ViewBag.list;
    var total_price_of_cart = ViewBag.price;
}


<h2>List of purchased items</h2>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a asp-controller="customer" asp-action="login"><button class="btn btn-danger" type="button">Logout</button> </a>
</div>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Pizza ID</th>
            <th>Pizza Name</th>
            <th>Pizza Image</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in list)
            {
                <tr>
                    <td>@item.PizzaId</td>
                    <td>@item.PizzaName</td>
                    <td> <img src="@item.PizzaImage" height="100px" /> </td>
                    <td>@item.PizzaPrice</td>
                </tr>
            }
        }
    </tbody>
</table>
<hr />
<h4>Total Amount : @total_price_of_cart</h4>
<br />

<br />
<a asp-action="index"> <button class="btn-info mr-4">Add more to cart</button></a>
<a asp-action="order_confirm"> <button class="btn-primary">Proceed to Purchase</button></a>